  float:right;
  width:260px;
}

/* Formulario de contacto */

#comment-form {
	clear: both;
	margin-left: 10px;
}

#print-mail-form a {
	color: #A80005;
	text-decoration: none;
}

#print-mail-form {
	padding: 10px;
}

#comment-form label,
#print-mail-form label,
.captcha legend {
	display: block;
	font-size: .9em;
	font-weight: bold;
	line-height: 1.4em;
	color: #666;
	color: rgba(0, 0, 0, 0.6);
	text-shadow: 0 1px 1px #fff;
}

.captcha .description {
	font-size: .85em;
}

#comment-form input[type="text"],
#comment-form textarea,
#print-mail-form input[type="text"],
#print-mail-form textarea {
	padding: 5px 8px;
	font-size: 12px;
	color: #666;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	-o-border-radius: 4px;
	border-radius: 4px;
}
      
#comment-form .tips,
#comment-form > div > p,
#comment-form #edit-preview,
#comment-form .grippie,
#print-mail-form .grippie {
	display: none;
}

#comment-form textarea,
#print-mail-form textarea {
	resize: none;
}

#comment-form .captcha {
	border: 1px solid #e2e2e2;
	margin-right: 10px;
}


