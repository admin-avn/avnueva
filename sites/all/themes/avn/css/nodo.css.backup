.nodo-encabezado {
	padding: 0 30px 0 10px;
}

.nodo-contenido {
	padding: 0 20px 0 10px;
}

.nodo-encabezado .termino a {
	color: #a80005;
	font-weight: bold;
	text-decoration: none;
	text-transform: uppercase;
}

.nodo-encabezado .titulo {
	margin-bottom: 0px;
	width: 450px;
}

.nodo-encabezado .titulo span {
	color: #514d4d;
	font-size: 18px;
	font-weight: bold;
}

.nodo-encabezado .titulo-imagen  {
	text-align: right;
}

.nodo-encabezado .titulo-imagen span {
	color: #514d4d;
	font-size: 10px;
	font-weight: bold;
}

.nodo-encabezado .autor, .nodo-encabezado .autor a  {
  font-weight: bold;
  color: #514D4D;
  font-size: 12px;
  text-decoration: none;
}

.nodo-encabezado .autor a {
   color: #A80005;
}

.nodo-encabezado .cajon-imagen {
  margin-top: 10px;
}

.nodo-encabezado .cajon-video {
  margin-top: 10px;
}

.nodo-encabezado .cajon-video img.playbutton {
  position: absolute;
  top:210px;
  left:281px;
  height: 60px;
  width: 60px;
  opacity: .7;
        -webkit-transition: opacity .1s ease-in-out;
        -moz-transition: opacity .1s ease-in-out;
        -o-transition: opacity .1s ease-in-out;
        transition: opacity .1s ease-in-out;
}

.nodo-encabezado .cajon-video img:hover.playbutton{
  position: absolute;
  top:210px;
  left:281px;
  height: 60px;
  width: 60px;
  opacity: 1;
        -webkit-transition: opacity .1s ease-in-out;
        -moz-transition: opacity .1s ease-in-out;
        -o-transition: opacity .1s ease-in-out;
        transition: opacity .1s ease-in-out;
}


.nodo-encabezado #galeria {
  margin-top: 10px;
}


.nodo-contenido .cuerpo div {
	padding-right: 0px;
}

.nodo-contenido .cuerpo p {
	color: #514d4d;
	font-size: 12px;
}

.nodo-contenido .cuerpo a {
	color: #a80005;
	text-decoration: none;
}

.nodo-contenido .cuerpo a:hover {
	text-decoration: underline;
}

.nodo-contenido .detalles {
		margin: 30px 0;
}

.nodo-contenido .detalles span,
.nodo-contenido .detalles span a {
	color: #514d4d;
	font-size: 12px;
}

.nodo-contenido .detalles span a {
		text-decoration: none;
}

.nodo-contenido .detalles span a:hover {
		text-decoration: underline;
}

.nodo-contenido .detalles span.autor,
.nodo-contenido .detalles span.avn {
	font-weight: bold;
}

.nodo-contenido .mensaje {
		border-top: 1px solid #e0e0e0;
}

.nodo-contenido .mensaje span {
		color: #514d4d;
		font-size: 1.2em;
		font-weight: bold;
}

.nodo-vinculos .relacionadas,
.nodo-posicion-1 .termino {
	border-bottom: 1px solid #e0e0e0;
	margin-bottom: 12px;
}

.views-row-2 .nodo-posicion-1 .termino,
.views-row-3 .nodo-posicion-1 .termino {
	display: none;
}

.nodo-vinculos .relacionadas span,
.nodo-posicion-1 .termino span {
	color: #514d4d;
	font-weight: bold;
}

.nodo-vinculos {
	margin-top: 12px;
}

.nodo-posicion-1,
.nodo-posicion-2,
.nodo-posicion-3 {
	margin-right: 0px;
}

.nodo-vinculos .vinculo-1,
.nodo-vinculos .vinculo-2,
.nodo-vinculos .vinculo-3,
.nodo-posicion-1,
.nodo-posicion-2,
.nodo-posicion-3 {
	border-bottom: 1px solid #e0e0e0;
	margin-bottom: 10px;
}

.nodo-vinculos .vinculo-1 .titulo,
.nodo-vinculos .vinculo-2 .titulo,
.nodo-vinculos .vinculo-3 .titulo,
.nodo-posicion-1 .titulo,
.nodo-posicion-2 .titulo,
.nodo-posicion-3 .titulo {
	line-height: 13px;
	margin-bottom: 5px;
}

.nodo-vinculos .vinculo-1 .titulo a,
.nodo-vinculos .vinculo-2 .titulo a,
.nodo-vinculos .vinculo-3 .titulo a,
.nodo-posicion-1 .titulo a,
.nodo-posicion-2 .titulo a,
.nodo-posicion-3 .titulo a {
	text-decoration: none;
	color: #514d4d;
	font-size: 12px;
	font-weight: bold;
}

/* Lo Más Leído */

.nodo-lomasleido .titulo-lomasleido {
	padding-top: 10px;
}

.nodo-lomasleido-1-5 {
	padding: 0 10px 0 5px;
}

.nodo-lomasleido-1-5 table {
	margin: 0 !important;
}

.views-row-last .nodo-lomasleido-1-5 {
