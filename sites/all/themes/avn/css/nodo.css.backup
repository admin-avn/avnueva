	border-bottom: 1px solid #e0e0e0;
}

.nodo-lomasleido-1-5 .fila1 .digito {
	background: url("/sites/all/themes/avn/images/lomasleidogris-1.png") no-repeat;
}

.nodo-lomasleido-1-5 .fila2 .digito {
	background: url("/sites/all/themes/avn/images/lomasleidogris-2.png") no-repeat;
}

.nodo-lomasleido-1-5 .fila3 .digito {
	background: url("/sites/all/themes/avn/images/lomasleidogris-3.png") no-repeat;
}

.nodo-lomasleido-1-5 .fila4 .digito {
	background: url("/sites/all/themes/avn/images/lomasleidogris-4.png") no-repeat;
}

.nodo-lomasleido-1-5 .fila5 .digito {
	background: url("/sites/all/themes/avn/images/lomasleidogris-5.png") no-repeat;
}

.nodo-lomasleido-1-5 {
	border-bottom: 1px solid #e0e0e0;
	position: relative;
}

.nodo-lomasleido-1-5 .titulo,
.nodo-lomasleido-1-5 .titulo-imagen {
	padding-left: 20px;
	float: left;
}

.nodo-lomasleido-1-5 .titulo-imagen {
	width: 208px;
}

.nodo-lomasleido-1-5 .titulo a,
.nodo-lomasleido-1-5 .titulo-imagen a {
	color: #514d4d;
	font-size: 12px;
	text-decoration: none;
}

.nodo-lomasleido-1-5 .imagen {
	width: 82px;
	height: 44px;
	margin-top: 2px;
	margin-bottom: 2px;
}

/* Titulares */

.titulares .titular .hora {
	color: #9c140d;
	font-family: 'Verdana';
	font-size: 11px;
	vertical-align: top;
	padding: 5px 0px 0px 7px;
	font-weight: bold;
}

.titulares .titular .titulo {
	padding: 6px 5px 6px 10px;
	line-height: 15px;
}

.titulares .titular .titulo a {
	color: #514d4d;
	font-family: 'Verdana';
	font-size: 12px;
	text-decoration: none;
}

.nodo-titulares {
  padding: 5px 10px 5px 5px;
}

.nodo-titulares .hora {
	color: #Ac2d00;
	font-size: 12px;
}

.nodo-titulares > span {
	color: #Ac2d00;
	font-size: 11px;
}

.nodo-titulares > span > a {
	color: #514d4d;
